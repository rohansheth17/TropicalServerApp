
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Building Product Selection Platform</title>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <script>
        
        $(function () {
            $("#btnSubmit").click(function () {
                var password = $("#password1").val();
                var confirmPassword = $("#confirm").val();
               // alert(password);
               // alert(confirmPassword);
                if (password != confirmPassword) {
                    alert("Passwords do not match.");
                    return false;
                }
                return true;
            });
        });
        
        /*
        function check_pass() {
            if (document.getElementById('password1').value ==
                document.getElementById('confirm').value) {
                document.getElementById('btnSubmit').disabled = false;
            } else {
                document.getElementById('btnSubmit').disabled = true;
            }
        }*/

    </script>

    <style>


        html {
            height: 100%;
        }

        body {
            width: 100%;
            background-image: linear-gradient(#1565c0,white);
        }

        #input_container {
            position: absolute;
            top: 20%;
            left: 20%;
            margin-top: -20px;
            margin-left: -100px;
        }

        #input {
            height: 20px;
            margin: 0;
            padding-right: 30px;
            width: 350px;
        }

        #input_img {
            position: relative;
            top: 4px;
            right: 5px;
            width: 5px;
            height: 5px;
        }

        #btn1 {
            position: absolute;
            right: 35%;
            bottom: 5px;
            background-color: darkblue;
            color: white;
        }

        #btn2 {
            background-color: Transparent;
            background-repeat: no-repeat;
            border: none;
            cursor: pointer;
            overflow: hidden;
            outline: none;
            color: black;
            position: absolute;
            right: 30px;
        }

        .circle {
            background-size: cover;
            display: block;
            border-radius: 100px;
            -webkit-border-radius: 100px;
            -moz-border-radius: 100px;
        }


        .img-responsive {
            width: 150px;
            height: 50px;
            position: absolute;
            left: 50%;
            margin-left: -25px;
        }

        #myModal {
            width: 100%;
            height: 100%;
            padding: 15px;
            margin: 0 auto;
        }
    </style>
</head>
<body>

    <a class="btn btn-primary" data-target="#myModal" data-toggle="modal" href="#myModal" id="btn2">Sign Up</a>


    <div id="input_container">
        <section class="container min-container py-md-5 mt-4">
            <div class="card-panel p-sm-5 position-relative">
                <div class="text-center">
                    <img src="https://i.ibb.co/QkYhFNX/joole.png" alt="Joole" class="img-fluid w50"><br><br>
                    <div class="text-center">
                        <h3 class="h2 mt-5">Building Product Selection Platform</h3>
                    </div>
                    <br>
                    <form id="loginForm" class="mt-5">
                        <div class="form-group position-relative">
                            <input type="text" id="input" placeholder="Username or email" required>
                            <!--<i class="fa fa-user icon" id="input_img"></i> <br><br>-->
                            <i class="fa fa-user fa-lg" style="position:absolute;right:36%;top:345px"></i>
                        </div><br>
                              <div class="position-relative">
                                  <input type="password" id="input" placeholder="Password" required>
                                  <!--class="form-control input-lg rounded-0"-->
                                  <i class="fa fa-lock fa-lg" style="position: absolute;right: 36%; top: 400px;"></i>
                              </div>
                        <br><br>
                        <div class="text-center">
                            <button class="btn btn-primary text-white text-uppercase" type="submit" id="btn1">Log In</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>



    <div class="modal fade" id="myModal" role="dialog" sstyle="vertical-align: middle;">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Register as User</h4>
                </div>
                <div class="modal-body">

                    <div class="img-responsive">
                        <label>Image preview</label><br>
                        <img id="output" width="100" height="100" class="circle" /><br>
                        <script>
                            var loadFile = function (event) {
                                var image = document.getElementById('output');
                                image.src = URL.createObjectURL(event.target.files[0]);
                            };
                        </script>
                        <label>Your Profile Pic</label><br>
                        <input type="file" value="Choose file" onchange="loadFile(event)" required><br>
                    </div>
                    <br><br><br><br><br><br><br><br><br><br>
                    <div class="signupform">
                        <label style="width:180px;text-align: left;">
                            UserName:
                        </label>
                        <input type="text" placeholder="UserName" required><br>
                        <label style="width:180px;display: inline-block;text-align: left;">
                            Email Address:
                        </label>
                        <input type="email" placeholder="Email Address" required><br>
                        <label style="width:180px;display: inline-block;text-align: left;">
                            Password:
                        </label>
                        <input type="password" id="password1" placeholder="Password" onchange='check_pass();' required><br>
                        <label style="width:180px;display: inline-block;text-align: left;">
                            Confirm Password:
                        </label>
                        <input type="password" id="confirm" placeholder="Confirm Password" onchange='check_pass();' required><br>
                        

                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-default" value="Sign up" id="btnSubmit" style="background-color:darkblue;color:white;">
                </div>
            </div>

        </div>
    </div>
</body>
    </html>
